extends partials/layout.pug

block content
  .welcome
    h1 You've tried the best, now try the rest
    form(method='POST')
        each user in users
            .media#users
                each profile in profiles
                    .media-left.media-middle
                        a(href='#')
                        img.media-object(src='user.imgUrl', alt='...')
                    .media-body
                        h4.media-heading #{user.name}
                        p I am #{profile.height} tall with #{profile.handsize} sized hands. Am I Murrcan? #{profile.citizenship}
                        input(
                        type='checkbox'
                        value='Like Me!'
                        selected=body.like && body.like.includes(user.userid)
                        )
        .like-stuff__submit
            input.btn.btn-success.btn-lg(type='submit' value='Like Me!')
