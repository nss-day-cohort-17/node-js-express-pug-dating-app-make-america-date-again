extends partials/layout.pug

block content
    form(method='POST')
        .form-group.col-sm-6.col-md-4
            label(for='height') Height
            input.form-control#height(type='text' name='height' placeholder='5\' 10"' value=body.height
            required)
        .form-group.col-sm-6.col-md-4
        label(for='citizenship') Citizenship
        select(name='citizenship')
          option Yes
          option No
        .form-group
        label(for='hand_size') Hand Size
        select(name='handsize')
          option Trump
          option Kid
          option Small
          option Medium
          option Yuuuuge
        .form-group
        label(for='imgUrl') Link to your picture
        input(type='text' name='imgUrl' placeholder='Paste Image Link...')
        .contact-form__submit.center
        a.btn.btn-danger.btn-lg(href='/') Cancel
        input.btn.btn-success.btn-lg(type='submit' value=Submit)
